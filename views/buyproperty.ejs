<%
  //info here
  var cash_on_hand = user.cash_on_hand;
  cash_on_hand_text = (cash_on_hand).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
  cash_on_hand_text = (cash_on_hand_text).substring(0, cash_on_hand_text.length - 3);
  cash_on_hand_text = "$"+cash_on_hand_text;


%>

<div class="container col-sm-12">
  <div id="buy_property_map"></div>
  <div id="cash_on_hand_text">Cash Available: <b><div id="cash_on_hand_amount"><%= cash_on_hand_text %></div></b></div>
  <hr/>
  <div><button type="button" class="btn btn-primary btn-lg center-block" id="buy_button">BUY</button></div>
</div>
  
  <footer>
    <% include partials/footer %>
  </footer>
 <script src="https://unpkg.com/leaflet@1.4.0/dist/leaflet.js"
